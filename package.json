{
  "name": "tidraw-app",
  "version": "1.0.0",
  "description": "Self-Hostable Wrapper for Tldraw",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porter-wang/Tidraw.git"
  },
  "author": "Porter Wang",
  "license": "",
  "bugs": {
    "url": "https://github.com/porter-wang/Tidraw/issues"
  },
  "homepage": "https://github.com/porter-wang/Tidraw#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "typescript": "^5.0.0"
  }
}
